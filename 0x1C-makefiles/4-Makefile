CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o) # this makes a list of .o files based on names of .c files on SRC by replacing .c with .o while keeping file names and save it OBJ variable
NAME = school
RM = rm -f # force remove to never fail and never show errors and never ask for confirmation
CFLAGS = -Wall -Werror -Wextra -pedantic
all: ${OBJ}
	${CC} ${OBJ} -o $(NAME)
clean:
	${RM} *~ .*.swp ${NAME} # remove tmp files auto generated by emacs *~ and vim .*.swp also may use .*.sw? if vim use other extensions like .*.swm or
#	.*.swo, also this cmd # deletes executable file school
oclean:
	$(RM) $(OBJ)
fclean : clean oclean
re : oclean all
